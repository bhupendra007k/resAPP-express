<a href="/" class="btn btn-info" style="margin-top:5px;">Back</a>
<%if(message!=''){%>
<div class="d-flex justify-content-center">
  <div class="alert alert-danger alert-dismissible fade show " role="alert">
    <strong>Login Failed!</strong> <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<%}%>
<h3>Teacher Login</h3>
<div class="teachLog">
  <form action="/teacher/login" method="POST" class="teachForm">
    <div class="mb-3">
      <label for="exampleInputname" class="form-label">Name : </label>
      <input type="text" name="name"  class="form-control" id="name">
      <br>
      <label for="exampleInputPassword1" class="form-label">Password : </label>
      <input type="password" name="password"  class="form-control" id="password">
      <br>
      <input type="checkbox" style="width: 30px;" onclick="myFunction()">Show Password
      <br>
    </div>
    <a><button type="submit" class="btn btn-primary">Submit</button></a>
  </form>
</div>
<script>
  function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}

</script>